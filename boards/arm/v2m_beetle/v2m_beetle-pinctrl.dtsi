#include <zephyr/dt-bindings/pinctrl/arm-v2m_beetle-pinctrl.h>

&pinctrl {
	/omit-if-no-ref/  uart0_default: uart0_default {
		group1 {
			pinmux = <UART0_TXD_EXP>;
		};

		group2 {
			pinmux = <UART0_RXD_EXP>;
			input-enable;
		};
	};

	/omit-if-no-ref/ uart1_default: uart1_default {
		group1 {
			pinmux = <UART1_TXD_EXP>;
		};

		group2 {
			pinmux = <UART1_RXD_EXP>;
			input-enable;
		};
	};

	/omit-if-no-ref/ gpio0_default: gpio0_default {
		group1 {
			pinmux = <GPIO0_P0_EXP>, <GPIO0_P1_EXP>,
				 <GPIO0_P2_EXP>, <GPIO0_P3_EXP>,
				 <GPIO0_P4_EXP>, <GPIO0_P5_EXP>,
				 <GPIO0_P6_EXP>, <GPIO0_P7_EXP>,
				 <GPIO0_P8_EXP>, <GPIO0_P9_EXP>,
				 <GPIO0_P10_EXP>, <GPIO0_P11_EXP>,
				 <GPIO0_P12_EXP>, <GPIO0_P13_EXP>,
				 <GPIO0_P14_EXP>, <GPIO0_P15_EXP>;
		};
	};

	/omit-if-no-ref/ gpio1_default: gpio1_default{
		group1 {
			pinmux = <GPIO1_P16_EXP>, <GPIO1_P17_EXP>,
				 <GPIO1_P18_EXP>, <GPIO1_P19_EXP>,
				 <GPIO1_P20_EXP>, <GPIO1_P21_EXP>,
				 <GPIO1_P22_EXP>, <GPIO1_P23_EXP>,
				 <GPIO1_P24_EXP>, <GPIO1_P25_EXP>,
				 <GPIO1_P26_EXP>, <GPIO1_P27_EXP>,
				 <GPIO1_P28_EXP>, <GPIO1_P29_EXP>,
				 <GPIO1_P30_EXP>, <GPIO1_P31_EXP>;
		};
	};

	/omit-if-no-ref/ spi0_default: spi0_default {
		group1 {
			pinmux = <SPI0_SS_EXP>, <SPI0_MOSI_EXP>, <SPI0_SCK_EXP>;
		};
		group2 {
			pinmux = <SPI0_MISO_EXP>;
			input-enable;
		};
	};

	/omit-if-no-ref/ spi1_default: spi1_default {
		group1 {
			pinmux = <SPI1_SCK_EXP>, <SPI1_SS_EXP>, <SPI0_MOSI_EXP>;

		};
		group2 {
			pinmux = <SPI1_MISO_EXP>;
			input-enable;
		};
	};

	/omit-if-no-ref/ sbcon0_default: sbcon0_default {
		group1 {
			pinmux = <SBCON0_SDA_EXP>, <SBCON0_SCL_EXP>;
			input-enable;
		};
	};

	/omit-if-no-ref/ sbcon1_default: sbcon1_default {
		group1 {
			pinmux = <SBCON1_SDA_EXP>, <SBCON1_SCL_EXP>;
			input-enable;
		};
	};
};
